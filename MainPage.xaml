<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:snake="clr-namespace:GravitySnake"
             x:Class="GravitySnake.MainPage"
             Title="Gravity Snake">
    <ContentPage.Resources>
        <snake:GraphicsDrawable x:Key="drawable" />
    </ContentPage.Resources>
    <VerticalStackLayout>
        <GraphicsView x:Name="gv" Drawable="{StaticResource drawable}"
                    HeightRequest="250"
                    WidthRequest="250" />
    </VerticalStackLayout>
</ContentPage>